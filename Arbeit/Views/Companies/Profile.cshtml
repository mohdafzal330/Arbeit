        </div>
        <div class="col-md-2 col-sm-2 col-xs-12">

        </div>
        <div class="col-md-1 col-sm-1 col-xs-12"></div>
    </div>

    <!--Row for Admin assigning-->
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12">
            <butto data-toggle="modal" data-target="#modalAdminForm" class="btn btn-dark">+ Assign New Admin</butto>
        </div>
    </div>

    <!--Row for Admin Details If available-->
    <br />
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <h4 class="text-primary">Admin Details </h4>
            <table class="table jumbotron">
                <tr class="blue-gradient white-text">
                    <th>Admin Name</th>
