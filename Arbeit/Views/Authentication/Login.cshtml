
@{
    ViewBag.Title = "Login Into your account";
}

<div  style="position:relative;background-image:url('../Content/img/back.png');background-repeat:no-repeat;background-size:100%;min-height:800px;">

    <br /><br /><br />
   <div class="container-fluid" >
       <div class="row">
           <div class="col-md-1 col-sm-1 col-xs-12 white-text"></div>
           
            <div class="col-md-5 col-sm-5 col-xs-12 white-text">
                   <center>
                       <br />
                       <h1>
                           Make a Arbeit Now for Free
                       </h1>
                       <br />
                       <p style="font-familyDejaVu Sans Condensed;line-height:2;word-spacing:2;letter-spacing:2px;">
                           The price of success is hard work, dedication to the job at hand,
                           and the determination that whether we win or lose, we have applied
                           the best of ourselves to the task at hand.

                       </p>


                   </center>
               </div>
            <div class="col-md-1 col-sm-1 col-xs-12 white-text"></div>
            <div class="col-md-4 col-sm-4 col-xs-12 ">
                   <div class="card" style="border-radius:25px;"> 

                       <h5 class="card-header primary-color white-text text-center py-4">
                           <strong>Login here</strong>
                       </h5>
                       <!--Card content-->
                       <div class="card-body px-lg-5 pt-0">

                           <!-- Form -->
                           <form class="text-center" style="color: #757575;">
                               <br />
                               <!-- Name -->
                               <div class="md-form mt-3">
                                   <input type="email" id="materialContactFormName" class="form-control">
                                   <label for="materialContactFormName">Email</label>
                               </div>

                               <!-- E-mail -->
                               <div class="md-form">
                                   <input type="password" id="materialContactFormEmail" class="form-control">
                                   <label for="materialContactFormEmail">Password</label>
                               </div>





                               <!-- Copy -->
                               <div class="form-check">
                                   <input type="checkbox" class="form-check-input" id="materialContactFormCopy">
                                   <label class="form-check-label" for="materialContactFormCopy">Remember me</label>
                               </div>

                               <!-- Send button -->
                               <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Login Account</button>
                               @Html.ActionLink("Forget Pasword ?" , "Forget", "Authentication",null, new { @class="" })
                           </form>
                           <!-- Form -->

                       </div>

                   </div>
                   <!-- Material form contact -->

               </div>
            <div class="col-md-1 col-sm-1 col-xs-12">
        </div>
   </div>
       <br /><br /><br />
       <div class="row  ">
           <div class="col-md-4 col-sm-4 col-xs-12">
               <div style="border-radius:600px;background-color:white" class="img-circle">
                   <h5 style="margin-left:120px;position:relative;top:70px;">100+ Registered Companies</h5>
                   <img src="../Content/img/com.jpg " style="border-radius:600px;margin-bottom:20px" width="100px"height="100px" />
                   
               </div>
           </div>
           <div class="col-md-4 col-sm-4 col-xs-12">               
           </div>
           <div class="col-md-4 col-sm-4 col-xs-12"></div>
           
       </div>
   </div>
 </div>
<!-- Material form contact -->
