<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100">Fill Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fas fa-sitemap prefix grey-text"></i>
                    <input type="text" id="name" name="name" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="name">Company Name</label>
                </div>

                <div class="md-form mb-5">
                    <i class="fas fa-info-circle prefix grey-text"></i>
                    <input type="text" id="description" name="description" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="description">Description/About</label>
                </div>

                <div class="md-form mb-5">
                    <i class="fas fa-folder prefix grey-text"></i>
                    <input type="number" id="boards" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="boards">Max No of Boards</label>
                </div>

                <div class="md-form mb-5">
                    <i class="fas fa-user prefix grey-text"></i>
                    <input type="number" id="users" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="users">Max No of Users</label>
                </div>               

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary">Add Company</button>
            </div>
        </div>
    </div>
</div>

